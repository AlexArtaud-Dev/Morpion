<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#230140"
    android:orientation="vertical"
    tools:context=".IngameActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="130dp">


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="311dp"
        android:layout_height="88dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout4"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">

        <ImageButton
            android:id="@+id/button_07"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@color/primary_color"
            android:onClick="playBox"
            android:textSize="60sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button_08"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:background="@color/primary_color"
            android:onClick="playBox"
            android:textSize="60sp"
            app:layout_constraintStart_toEndOf="@+id/button_07"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button_09"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:background="@color/primary_color"
            android:onClick="playBox"
            android:textSize="60sp"
            app:layout_constraintStart_toEndOf="@+id/button_08"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/playingPlayerT"
        android:layout_width="288dp"
        android:layout_height="135dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/nasalizationrg"
        android:text="@string/turn"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider3"
        android:layout_width="13dp"
        android:layout_height="414dp"
        android:layout_marginStart="312dp"
        android:background="@color/primary_color"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-2dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="311dp"
        android:layout_height="88dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/divider3"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/button_01"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@color/primary_color"
            android:onClick="playBox"
            android:textSize="60sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button_02"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:background="@color/primary_color"
            android:onClick="playBox"
            android:textSize="60sp"
            app:layout_constraintStart_toEndOf="@+id/button_01"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button_03"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:background="@color/primary_color"
            android:onClick="playBox"
            android:textSize="60sp"
            app:layout_constraintStart_toEndOf="@+id/button_02"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="311dp"
        android:layout_height="88dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/divider3"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <ImageButton
            android:id="@+id/button_04"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@color/primary_color"
            android:onClick="playBox"
            android:textSize="60sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button_05"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:background="@color/primary_color"
            android:onClick="playBox"
            android:textSize="60sp"
            app:layout_constraintStart_toEndOf="@+id/button_04"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button_06"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:background="@color/primary_color"
            android:onClick="playBox"
            android:textSize="60sp"
            app:layout_constraintStart_toEndOf="@+id/button_05"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
