<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#230140"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button3"
        android:layout_width="296dp"
        android:layout_height="59dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="36dp"
        android:background="@color/primary_color"
        android:fontFamily="@font/nasalizationrg"
        android:gravity="center"
        android:onClick="DraftMode"
        android:text="@string/button_one"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nasalizationrg"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:text="@string/app_title"
        android:textColor="#FFFFFF"
        android:textSize="68sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="297dp"
        android:layout_height="60dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:background="@color/primary_color"
        android:fontFamily="@font/nasalizationrg"
        android:gravity="center"
        android:text="@string/button_two"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:onClick="CustomGame"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="629dp"
        android:layout_height="61dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="116dp"
        android:background="@color/primary_color"
        android:onClick="SoloIngameMode"
        android:fontFamily="@font/nasalizationrg"
        android:gravity="center"
        android:text="@string/button_three"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>