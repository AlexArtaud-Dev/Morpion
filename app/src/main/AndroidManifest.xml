<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="artaudal.morpion" >
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:name=".models.MyApp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Morpion" >
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DraftActivity"/>
        <activity android:name=".DraftComputerActivity"/>
        <activity android:name=".IngameActivity"/>
        <activity android:name=".IngameCustomActivity"/>
        <activity android:name=".SelectSizeActivity"/>
        <activity android:name=".ResultActivity"/>
        <activity android:name=".ComputerActivity"/>
        <activity android:name=".ChooseDifficultyActivity"/>
        <activity android:name=".ResultComputerActivity"/>
    </application>

</manifest>